# Database Configuration
POSTGRES_USER=worldsignal
POSTGRES_PASSWORD=worldsignal
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=worldsignal

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=world_signal_news
# VECTOR_SIZE must match your embedding model's output dimension
# gemini-embedding-001: 3072, text-embedding-004: 768, all-MiniLM-L6-v2: 384
VECTOR_SIZE=3072

# API Keys (if GEMINI_API_KEY is set, Gemini is used; otherwise OpenAI API is used)
# Get your Gemini API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# If not using Gemini, set OpenAI API key for llama.cpp server
OPENAI_API_KEY=
OPENAI_BASE_URL=http://localhost:8080/v1

# News API Keys (optional - add as you find them)
NEWSAPI_KEY=
GUARDIAN_API_KEY=
NYT_API_KEY=
FINNHUB_API_KEY=
ALPHAVANTAGE_API_KEY=

# Embedding Model
EMBEDDING_MODEL=gemini-embedding-001

# LLM Settings
LLM_MODEL=gemini-3-flash-preview
LLM_TEMPERATURE=0.7

# Chunking Settings
CHUNK_SIZE=800
CHUNK_OVERLAP=100